use std::io;

fn main() {

    let secret = 4;
    println!("Can you guess what number I am thinking of between 1 and 10?");
    
    
    loop {
        let mut input = String::new(); // A mutable String to hold the user input
        
    
        io::stdin()
            .read_line(&mut input) // Read input into the `input` variable
            .expect("Failed to read line");
        println!("Your Guess: {}", &input);
        
        let guess: i32 = input.trim().parse().expect("Please enter a number.");
        if guess > secret {
        println!("Too high!")
    }else if guess < secret{
        println!("Too low!")
    }else if guess == secret{
        println!("Correct!")
    }
    }   
    
}
